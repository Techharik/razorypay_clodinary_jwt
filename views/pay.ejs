</head>
<body>
    <button id="rzp-button1">Pay</button>


<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
 const btn = document.getElementById('rzp-button1')

 btn.addEventListener('click',async (e)=>{
  
  const response = await fetch('/pay',{
    method:'POST',
    headers:{
        'Content-Type':'application/json',
    },
    body:JSON.stringify({amount:500})
  })
 const myOrders = response.json();


 var options = {
    key: "rzp_test_BLCxTdA1kFfVY8", // Enter the Key ID generated from the Dashboard
    amount: 50000, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
    currency: "INR",
    name: "techharik", //your business name
    description: "Test Transaction",
    image: "https://example.com/your_logo",
    order_id: myOrders.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1

};
const  rzp1 = new Razorpay(options);
    rzp1.open();
 })




</script>
</body>
</html>